{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Raw Event v1",
  "type": "object",
  "required": [
    "event_id",
    "timestamp",
    "user_id",
    "type",
    "amount",
    "old_balance_orig",
    "new_balance_orig"
  ],
  "properties": {
    "event_id": {"type": "string", "minLength": 1},
    "timestamp": {"type": "string", "minLength": 1},
    "user_id": {"type": "string", "minLength": 1},
    "type": {
      "type": "string",
      "enum": ["TRANSFER", "CASH-OUT", "PAYMENT", "CASH-IN", "DEBIT"]
    },
    "amount": {"type": "number", "minimum": 0},
    "old_balance_orig": {"type": "number", "minimum": 0},
    "new_balance_orig": {"type": "number", "minimum": 0}
  },
  "additionalProperties": true
}
